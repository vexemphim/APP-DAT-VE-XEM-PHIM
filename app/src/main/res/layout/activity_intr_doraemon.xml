<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".intr_doraemon">

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="263dp"
        android:layout_height="82dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logotrungnguyen" />

    <TableLayout

        android:id="@+id/tableLayout"
        android:layout_width="218dp"
        android:layout_height="258dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView10">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView

                android:id="@+id/imageView11"
                android:layout_width="match_parent"
                android:layout_height="255dp"
                app:srcCompat="@drawable/doraemon" />
        </TableRow>

    </TableLayout>

    <TableLayout

        android:id="@+id/tableLayout2"
        android:layout_width="193dp"
        android:layout_height="296dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView10">

        <TableRow
            android:layout_width="182dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:text="NOBITA VÀ CHUYẾN THÁM HIỂM MẶT TRĂNG"
                android:textColor="#111"
                android:textSize="25dp" />
        </TableRow>

        <TableRow
            android:layout_width="182dp"
            android:layout_height="40dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Đạo Diễn:Shinnosuke Yakuwa"
                android:textSize="17dp" />
        </TableRow>

        <TableRow
            android:layout_width="182dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Quốc Gia:Nhật Bản"
                android:textSize="17dp" />
        </TableRow>



        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Thể Loại: Phim Hoạt Hình"
                android:textSize="17dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Ngày Công Chiếu:29/5/2019"
                android:textSize="17dp" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="325dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout2">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="#59B9BBBB"
            android:textColor="#FF0000"
            android:text="THÔNG TIN"

            android:textSize="30dp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nddoraemon"
            android:textSize="17dp" />

        <Button
            android:id="@+id/btdatve"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ĐẶT VÉ" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>