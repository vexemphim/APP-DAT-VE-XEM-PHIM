<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".intr_POkemon">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#CC02FFED">

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="263dp"
                android:layout_height="82dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/logotrungnguyen" />

            <TableLayout

                android:id="@+id/tableLayout2"
                android:layout_width="203dp"
                android:layout_height="290dp"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toEndOf="@+id/tableLayout"
                app:layout_constraintTop_toBottomOf="@+id/imageView10">

                <TableRow
                    android:layout_width="182dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:text="POKÉMON: THÁM TỬ PIKACHU"
                        android:textColor="#111"
                        android:textSize="25dp" />
                </TableRow>

                <TableRow
                    android:layout_width="182dp"
                    android:layout_height="40dp">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Đạo Diễn:Rob Letterman"
                        android:textSize="17dp" />
                </TableRow>

                <TableRow
                    android:layout_width="182dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="Quốc Gia: Nhật Bản"
                        android:textSize="17dp" />
                </TableRow>

                <TableRow
                    android:layout_width="182dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="Thời Lượng: 125 phút"
                        android:textSize="17dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Thể Loại:Phim Hoạt Hình"
                        android:textSize="17dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="Ngày Công Chiếu:24/7/2019"
                        android:textSize="17dp" />
                </TableRow>

            </TableLayout>

            <TableLayout

                android:id="@+id/tableLayout"
                android:layout_width="208dp"
                android:layout_height="263dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView10">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView

                        android:id="@+id/imageView11"
                        android:layout_width="203dp"
                        android:layout_height="255dp"
                        app:srcCompat="@drawable/pokemon" />
                </TableRow>

            </TableLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="325dp"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tableLayout2">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:background="#0F0F0F"
                    android:text="THÔNG TIN"
                    android:textColor="#FF0000"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ndgodzilla"
                    android:textSize="17dp"
                    android:textColor="#000000"/>

                <Button
                    android:id="@+id/btdatve"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#0F0F0F"
                    android:text="ĐẶT VÉ"
                    android:textColor="#FA0303"
                    android:textSize="30sp" />

            </LinearLayout>

        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>