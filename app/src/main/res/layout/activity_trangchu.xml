<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".trangchu">


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="402dp"
                android:layout_height="75dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/logotrungnguyen" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="388dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="15dp"
                android:background="#59B9BBBB"
                android:text="Thông Tin Khách Hàng"
                android:textColor="#FF0000"
                android:textSize="22dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView" />

            <TextView
                android:id="@+id/txtTen"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="28dp"
                android:text="@string/txtTen"
                android:textColor="#090000"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                tools:text="@string/txtTen" />

            <TextView
                android:id="@+id/txtSĐT"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="25dp"
                android:text="@string/txtSĐT"
                android:textColor="#090000"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtTen" />

            <TextView
                android:id="@+id/txtNgàySinh"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="29dp"
                android:text="@string/txtNgàySinh"
                android:textColor="#090000"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtSĐT" />

            <EditText
                android:id="@+id/editTên"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="@string/editTên"
                android:textColor="#090000"
                app:layout_constraintStart_toEndOf="@+id/txtTen"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <EditText
                android:id="@+id/editNgàySinh"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_marginStart="17dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="@string/editNgàySinh"
                android:textColor="#090000"
                app:layout_constraintStart_toEndOf="@+id/txtNgàySinh"
                app:layout_constraintTop_toBottomOf="@+id/editSĐT" />

            <EditText
                android:id="@+id/editSĐT"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_marginStart="18dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="6dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="@string/editSĐT"
                android:textColor="#090000"
                app:layout_constraintStart_toEndOf="@+id/txtSĐT"
                app:layout_constraintTop_toBottomOf="@+id/editTên" />

            <TextView
                android:id="@+id/txtChọnPhim2"
                android:layout_width="400dp"
                android:layout_height="40dp"
                android:layout_marginTop="14dp"
                android:background="#59B9BBBB"
                android:text="@string/txtChọnPhim"
                android:textColor="#FF0000"
                android:textSize="22dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editNgàySinh" />

            <TextView
                android:id="@+id/txtChọnPhim"
                android:layout_width="210dp"
                android:layout_height="40dp"
                android:layout_marginTop="22dp"
                android:background="#59B9BBBB"
                android:text="SỐ LƯỢNG VÉ"
                android:textColor="#FF0000"
                android:textSize="22dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

            <TextView
                android:id="@+id/txtChọnPhim3"
                android:layout_width="210dp"
                android:layout_height="40dp"
                android:background="#59B9BBBB"
                android:text="THANH TOÁN"
                android:textColor="#FF0000"
                android:textSize="22dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/switch2" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="302dp"
                android:layout_height="28dp"
                android:layout_marginStart="53dp"
                android:layout_marginLeft="53dp"
                android:layout_marginTop="12dp"
                android:entries="@array/chonphim_array"
                android:spinnerMode="dropdown"
                android:textColor="#090000"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtChọnPhim2" />

            <Button
                android:id="@+id/btchonghe"
                android:layout_width="106dp"
                android:layout_height="52dp"
                android:layout_marginStart="75dp"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="8dp"
                android:text="CHỌN GHẾ"
                android:textColor="#090000"
                app:layout_constraintStart_toEndOf="@+id/button3"
                app:layout_constraintTop_toBottomOf="@+id/spinner2" />

            <Button
                android:id="@+id/button3"
                android:layout_width="97dp"
                android:layout_height="53dp"
                android:layout_marginStart="65dp"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="5dp"
                android:text="hủy Mua"
                android:textColor="#090000"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtChọnPhim3" />

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="158dp"
                android:layout_height="125dp"
                android:layout_marginStart="78dp"
                android:layout_marginLeft="78dp"
                android:layout_marginTop="17dp"
                android:orientation="vertical"
                app:layout_constraintStart_toEndOf="@+id/linearLayout3"
                app:layout_constraintTop_toBottomOf="@+id/spinner">

                <TextView
                    android:id="@+id/txtchonghe"
                    android:layout_width="155dp"
                    android:layout_height="39dp"
                    android:background="#59B9BBBB"
                    android:text="SỐ LƯỢNG "
                    android:textColor="#FF0000"
                    android:textSize="22dp" />

                <EditText
                    android:id="@+id/editText3"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:ems="10"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/editText4"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:ems="10"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="158dp"
                android:layout_height="125dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="17dp"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/spinner">

                <TextView
                    android:id="@+id/txtchonghe2"
                    android:layout_width="155dp"
                    android:layout_height="39dp"
                    android:background="#59B9BBBB"
                    android:text="DỊCH VỤ"
                    android:textColor="#FF0000"
                    android:textSize="22dp" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:ems="10"
                    android:text="BẮP RANG"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="NƯỚC NGỌT"
                    android:textSize="18sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/editText5"
                android:layout_width="190dp"
                android:layout_height="40dp"
                android:layout_marginTop="21dp"
                android:ems="10"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout4" />

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="190dp"
                android:layout_height="40dp"
                android:layout_marginTop="3dp"
                android:entries="@array/donvi"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/switch2" />

            <Switch
                android:id="@+id/switch2"
                android:layout_width="282dp"
                android:layout_height="48dp"
                android:background="#59B9BBBB"
                android:text="HỘI VIÊN"
                android:textColor="#FF0000"
                android:textSize="22dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtChọnPhim" />


        </android.support.constraint.ConstraintLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>